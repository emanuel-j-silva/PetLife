<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTb"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:background="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/subtitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informações do Pet"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarTb" />

    <TextView
        android:id="@+id/nameTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Pet"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleTv" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTitleTv" />

    <TextView
        android:id="@+id/birthTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de nascimento"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTv" />

    <TextView
        android:id="@+id/birthTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de nascimento"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birthTitleTv" />

    <TextView
        android:id="@+id/typeTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birthTv" />

    <TextView
        android:id="@+id/typeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/typeTitleTv" />

    <TextView
        android:id="@+id/colorTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cor"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/typeTv" />

    <TextView
        android:id="@+id/colorTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cor"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorTitleTv" />

    <TextView
        android:id="@+id/sizeTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porte"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorTv" />

    <TextView
        android:id="@+id/sizeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porte"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sizeTitleTv" />

    <TextView
        android:id="@+id/lastVeterinarianTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Última ida ao veterinário"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sizeTv" />

    <TextView
        android:id="@+id/lastVeterinarianTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ida ao veterinário"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastVeterinarianTitleTv" />

    <TextView
        android:id="@+id/lastPetshopTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Última ida ao pet shop"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastVeterinarianTv" />

    <TextView
        android:id="@+id/lastPetshopTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ida ao pet shop"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastPetshopTitleTv" />

    <TextView
        android:id="@+id/lastVaccinationTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Última vacinação"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastPetshopTv" />

    <TextView
        android:id="@+id/lastVaccinationTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vacinação"
        android:textSize="10sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastVaccinationTitleTv" />

    <TextView
        android:id="@+id/telephoneTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastVaccinationTv" />

    <LinearLayout
        android:id="@+id/layoutPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/telephoneTitleTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/telephoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:textSize="10sp"
            android:padding="5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/telephoneTitleTv" />

        <Button
            android:id="@+id/callBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ligar"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/telephoneTitleTv" />
    </LinearLayout>

    <TextView
        android:id="@+id/siteTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Site"
        android:textSize="15sp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPhone" />

    <LinearLayout
        android:id="@+id/layoutSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/siteTitleTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/siteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Site"
            android:textSize="10sp"
            android:padding="5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/siteTitleTv" />

        <Button
            android:id="@+id/siteBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acessar"
            android:padding="5dp"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/siteTitleTv" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>